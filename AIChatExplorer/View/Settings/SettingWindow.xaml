<Window
    x:Class="AIChatExplorer.View.Settings.SettingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:LibUIPythonAI.View.Common;assembly=LibUIPythonAI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:AIChatExplorer.View.Settings"
    xmlns:viewmodel="clr-namespace:AIChatExplorer.ViewModel.Settings"
    d:DataContext="d:DdesignInstance Type=viewmodel:SettingWindowViewModel"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatLightBgButton}" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="25" />
        </Style>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Activated">
            <i:InvokeCommandAction Command="{Binding ActivatedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  メニューバー  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,0"
            Orientation="Vertical">
            <materialDesign:ColorZone
                materialDesign:ElevationAssist.Elevation="Dp4"
                DockPanel.Dock="Top"
                Mode="PrimaryMid">
                <Menu
                    Name="menu1"
                    Margin="0,0,0,0"
                    materialDesign:MenuAssist.TopLevelMenuItemHeight="18"
                    IsMainMenu="False">
                    <MenuItem
                        Background="{DynamicResource MaterialDesign.Brush.Primary}"
                        Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                        Header="" />
                </Menu>

            </materialDesign:ColorZone>
        </StackPanel>
        <TabControl Grid.Row="1" HorizontalContentAlignment="Left">
            <TabItem Header="{x:Static res:ViewStringResources.BasicSettings}">
                <ScrollViewer
                    Grid.Row="1"
                    Height="500"
                    VerticalScrollBarVisibility="Auto">
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!--  基本設定  -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.BasicSettings}" />

                            <!--  Language  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="Language" />
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                SelectedIndex="{Binding SelectedLanguage}">
                                <ComboBoxItem Content="Default (The default value is Japanese if the system language is Japanese, otherwise English)" />
                                <ComboBoxItem Content="Japanese" />
                                <ComboBoxItem Content="English" />
                            </ComboBox>
                            <!--  ProxyURL  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.ProxyURL}" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                Text="{Binding ProxyURL}" />
                            <!--  NoProxyList  -->
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.NoProxyList}" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                Text="{Binding NoProxyList}" />

                            <!--  Backup Generation  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.ApplicationDBBackupGenerations}"
                                Visibility="Collapsed" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.ApplicationDBBackupGenerationsDescription}"
                                Text="{Binding BackupGeneration}"
                                Visibility="Collapsed" />

                        </Grid>
                        <!--  Python設定  -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.PythonSettings}" />

                            <!--  外部APIサーバー/内部APIサーバー/Python.Netの選択  -->
                            <RadioButton
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.UseInternalAPIServer}"
                                GroupName="PythonServer"
                                IsChecked="{Binding UseInternalAPI, UpdateSourceTrigger=PropertyChanged}" />
                            <RadioButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.UseExternalAPIServer}"
                                GroupName="PythonServer"
                                IsChecked="{Binding UseExternalAPI, UpdateSourceTrigger=PropertyChanged}" />


                            <!--  APIServer APIServerVisibility  -->
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.APIServerURL}"
                                Visibility="{Binding APIServerVisibility}" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SpecifyAPIServerURL}"
                                Text="{Binding APIServerURL}"
                                Visibility="{Binding APIServerVisibility}" />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.InternalAPIServerSettings}" />
                            <!--  PythonVenvPth  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AppDataPath}"
                                Visibility="{Binding InternalVisibility}" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.AppDataPathHint}"
                                Text="{Binding AppDataPath}"
                                Visibility="{Binding InternalVisibility}" />
                            <!--  PythonVenvPth  -->
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.PythonVenvPath}"
                                Visibility="{Binding InternalVisibility}" />
                            <TextBox
                                Grid.Row="4"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.PythonVenvPathHint}"
                                Text="{Binding PythonVenvPath}"
                                Visibility="{Binding InternalVisibility}" />

                        </Grid>
                        <!--  OpenAI設定  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <!--  OpenAI  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.OpenAISettings}" />
                            <!--  OpenAI  API Key  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.OpenAIKey}" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SetOpenAIKey}"
                                Text="{Binding OpenAIKey}" />

                            <!--  Azure OpenAI  -->
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.UseAzureOpenAI}"
                                TextWrapping="Wrap" />
                            <CheckBox
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.UseAzureOpenAIInsteadOfOpenAI}"
                                IsChecked="{Binding AzureOpenAI}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AzureOpenAIAPIVersion}"
                                TextWrapping="Wrap" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                Text="{Binding AzureOpenAIAPIVersion}" />

                            <!--  Azure OpenAI Endpoint  -->
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AzureOpenAIEndpoint}" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SetAzureOpenAIEndpoint}"
                                Text="{Binding AzureOpenAIEndpoint}" />

                            <!--  OpenAI Completion Model  -->
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.OpenAIModel}" />
                            <TextBox
                                Grid.Row="4"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SetOpenAIModel}"
                                Text="{Binding OpenAICompletionModel}" />

                            <!--  OpenAI Embedding Model  -->
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.OpenAIEmbeddingModel}" />
                            <TextBox
                                Grid.Row="5"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SetOpenAIEmbeddingModel}"
                                Text="{Binding OpenAIEmbeddingModel}" />
                            <!--  OpenAI Complition Base URL  -->
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.OpenAIBaseURL}" />
                            <TextBox
                                Grid.Row="6"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SetOpenAIBaseURL}"
                                Text="{Binding OpenAIBaseURL}" />
                        </Grid>

                        <!--  Spacy設定  -->
                        <Grid Grid.Row="3" Visibility="{Binding EnableDevFeaturesVisibility}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.PythonSpacySettings}" />
                        </Grid>
                        <!--  Python OCR設定  -->
                        <Grid Grid.Row="4" Visibility="{Binding EnableDevFeaturesVisibility}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.PythonOCRSettings}" />
                        </Grid>
                        <!--  その他  -->
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="260" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.Other}" />

                            <!--  開発中機能を有効にする  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.EnableDevelopmentFeatures}" />
                            <CheckBox
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="10,10,10,0"
                                IsChecked="{Binding EnableDevFeatures}" />
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{x:Static res:ViewStringResources.DetailSettings}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <!--  自動処理 モニタリング/Embedding  -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <!--  MonitorTargetAppNames  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                VerticalAlignment="Center"
                                Text="{x:Static res:ViewStringResources.SourceApp}" />

                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.SourceAppExample}"
                                Text="{Binding MonitorTargetAppNames}" />
                            <CheckBox
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Content="{x:Static res:ViewStringResources.IgnoreTextLessOrEqualToSpecifiedLines}"
                                IsChecked="{Binding IgnoreLineCountChecked}" />

                            <DockPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left">
                                <TextBox
                                    Width="50"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding IgnoreLineCountText}" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Static res:ViewStringResources.LineOrLess}" />
                            </DockPanel>
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutomaticallyExtractTextFromFile}" />
                            <CheckBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.AutomaticallyExtractTextFromFileIfApplicationItemIsFile}"
                                IsChecked="{Binding AutoFileExtract}" />
                            <!--  AutoExtractImageWithPyOCR  -->
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutomaticallyExtractTextFromImage}" />
                            <RadioButton
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.DoNot}"
                                GroupName="AutoExtractImage"
                                IsChecked="{Binding AutoExtractImageNone, Mode=OneWay}" />
                            <RadioButton
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.ExtractTextUsingPyOCR}"
                                GroupName="AutoExtractImage"
                                IsChecked="{Binding AutoExtractImageWithPyOCR}"
                                Visibility="{Binding EnableDevFeaturesVisibility}" />
                            <RadioButton
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.ExtractTextUsingOpenAI}"
                                GroupName="AutoExtractImage"
                                IsChecked="{Binding AutoExtractImageWithOpenAI}" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.EmbeddingWhenExtractingTextFromImage}" />
                            <CheckBox
                                Grid.Row="7"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.EmbeddingWhenExtractingTextFromImageDescription}"
                                IsChecked="{Binding EmbeddingWhenExtractingTextFromImage}" />
                        </Grid>
                        <!--  自動処理 プロンプト実行  -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutoTitleGeneration}" />
                            <RadioButton
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.DoNot}"
                                GroupName="AutoDescription"
                                IsChecked="{Binding AutoDescriptionNone, Mode=OneWay}" />
                            <RadioButton
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.AutoTitleGeneration}"
                                GroupName="AutoDescription"
                                IsChecked="{Binding AutoDescription}"
                                Visibility="{Binding EnableDevFeaturesVisibility}" />
                            <RadioButton
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.AutomaticallyGenerateTitleUsingOpenAI}"
                                GroupName="AutoDescription"
                                IsChecked="{Binding AutoDescriptionWithOpenAI}" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutomaticallyGenerateTags}"
                                Visibility="{Binding EnableDevFeaturesVisibility}" />
                            <CheckBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.AutomaticallyGenerateTagsFromClipboardContent}"
                                IsChecked="{Binding AutoTag}"
                                Visibility="{Binding EnableDevFeaturesVisibility}" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutomaticallyAddBackgroundInformation}" />
                            <CheckBox
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.GenerateBackgroundInformation}"
                                IsChecked="{Binding AutoSummary}" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutomaticallyGenerateSummary}" />
                            <CheckBox
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.GenerateSummaryTextFromContent}"
                                IsChecked="{Binding AutoSummary}" />
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutomaticallyGenerateTaskList}" />
                            <CheckBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.GenerateTaskListFromContent}"
                                IsChecked="{Binding AutoGenerateTasks}" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutoCheckDocumentReliability}" />
                            <CheckBox
                                Grid.Row="7"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.CheckDocumentReliabilityOfContent}"
                                IsChecked="{Binding AutoDocumentReliabilityCheck}" />
                        </Grid>
                        <!--  その他の設定  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <!--  Monitoring  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.ScreenMonitoringInterval}" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Text="{Binding ScreenMonitoringInterval}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{x:Static res:ViewStringResources.AutoPredictUserIntent}" />
                            <CheckBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{x:Static res:ViewStringResources.AutoPredictUserIntent}"
                                IsChecked="{Binding AutoPredictUserIntent}" />
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="2" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" Margin="10,0,10,0">
                <Button
                    Width="180"
                    Margin="10,0,10,0"
                    Command="{Binding CheckCommand}"
                    Content="{x:Static res:ViewStringResources.CheckSettings}"
                    DockPanel.Dock="Left" />
            </DockPanel>
            <DockPanel
                Grid.Column="1"
                Margin="10,0,10,0"
                HorizontalAlignment="Right">
                <Button
                    Width="100"
                    Margin="10,0,10,0"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{x:Static res:ViewStringResources.OK}" />
                <Button
                    Width="100"
                    Margin="10,0,10,0"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{x:Static res:ViewStringResources.Cancel}"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </Grid>
        <control:MyStatusBar
            Grid.Row="3"
            Margin="0,0,0,0"
            VerticalAlignment="Bottom" />
        <ProgressBar
            Grid.Row="1"
            IsIndeterminate="{Binding CommonViewModelProperties.IsIndeterminate}"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Value="0" />
    </Grid>

</Window>
