
<Window
    x:Class="AIChatExplorer.AppStartup.StartupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AIChatExplorer.AppStartup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AIChatExplorer"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Border CornerRadius="20" Background="#222" Opacity="0.95" Padding="32">
            <Border.Effect>
                <DropShadowEffect Color="#000" BlurRadius="16" ShadowDepth="0" Opacity="0.5" />
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <!-- ロゴ画像 -->
                <Image Source="/AIChatExplorer;component/favicon.ico" Width="64" Height="64" Margin="0,0,0,16" />
                <!-- アプリ名 -->
                <TextBlock Text="AIChatExplorer" Foreground="#fff" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8" />
                <!-- サブタイトル -->
                <TextBlock Text="Initializing..." Foreground="#aaa" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,24" />
                <!-- アニメーション付きプログレスバー -->
                <ProgressBar IsIndeterminate="True" Height="8" Width="220" Foreground="#00bfff" Background="#444" Margin="0,0,0,16" />
                <!-- フェードインアニメーション -->
                <StackPanel.Triggers>
                    <EventTrigger RoutedEvent="StackPanel.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </StackPanel.Triggers>
            </StackPanel>
        </Border>
    </Grid>
</Window>
