<Window x:Class="QAChat.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QAChat"
        mc:Ignorable="d"
        Title="設定" Height="400" Width="600"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="0">
            <Grid x:Name="grid1" />
        </ScrollViewer>
        <Grid Grid.Row="1" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnOK" Content="OK" Click="btnOK_Click" Grid.Column="0" Margin="10,10,10,10" Width="50" />
            <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Grid.Column="1" Margin="10,10,10,10"  Width="50" />
        </Grid>

    </Grid>
</Window>
