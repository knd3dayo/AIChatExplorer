<Window x:Class="ClipboardApp.View.SearchView.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardApp"
        xmlns:view="clr-namespace:ClipboardApp.View.SearchView"
        mc:Ignorable="d"
        SizeToContent="Height"
        Style="{StaticResource MaterialDesignWindow}"
        Title="検索" Height="Auto" Width="500">
    <Window.DataContext>
        <view:SearchWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="検索タイプ" Grid.Column="0" Margin="10,10,10,0" />
            <TextBlock Text="{Binding SearchTypeText}" Grid.Column="1" Margin="10,10,10,0"
                       />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="検索条件名" Grid.Column="0" Margin="10,10,10,0" />
            <TextBox   Text="{Binding SearchConditionRule.Name}" Grid.Column="1" Margin="10,10,10,0"
                       IsEnabled="False"
                       />
        </Grid>
        <DockPanel Grid.Row="2" HorizontalAlignment="Stretch" Visibility="{Binding SearchFolderVisibility}">
            <TextBlock Text="検索フォルダ" Margin="10,10,10,0"
                       />
            <!-- 適用対象を選択するツリービューを表示するボタン-->
            <Button Content="選択" 
                        Command="{Binding OpenSelectSearchFolderWindowCommand}"
                        Margin="10,10,10,0"
                        />
            <TextBox Text="{Binding SearchFolderPath}"  Margin="10,10,10,0"
                         IsEnabled="False"
                         />
        </DockPanel>
        <Grid  Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Content="除外" Grid.Row="0" Grid.Column="0" Margin="10,10,10,0"
                      IsChecked="{Binding SearchConditionRule.SearchCondition.ExcludeDescription}"
                      />
            <TextBlock Text="説明" Grid.Row="0" Grid.Column="1" Margin="10,10,10,0"/>
            <TextBox Text="{Binding SearchConditionRule.SearchCondition.Description}" Grid.Row="0" Grid.Column="2" Margin="10,10,10,0"/>

            <CheckBox Content="除外" Grid.Row="1" Grid.Column="0" Margin="10,10,10,0"
                      IsChecked="{Binding SearchConditionRule.SearchCondition.ExcludeContent}"
                      />
            <TextBlock Text="内容" Grid.Row="1" Grid.Column="1" Margin="10,10,10,0"/>
            <TextBox Text="{Binding SearchConditionRule.SearchCondition.Content}" Grid.Row="1" Grid.Column="2" Margin="10,10,10,0"/>

            <CheckBox Content="除外" Grid.Row="2" Grid.Column="0" Margin="10,10,10,0"
                      IsChecked="{Binding SearchConditionRule.SearchCondition.ExcludeTags}"
                      />
            <TextBlock Text="タグ" Grid.Row="2" Grid.Column="1" Margin="10,10,10,0"/>
            <TextBox Text="{Binding SearchConditionRule.SearchCondition.Tags}" Grid.Row="2" Grid.Column="2" Margin="10,10,10,0"/>

            <CheckBox Content="除外" Grid.Row="3" Grid.Column="0" Margin="10,10,10,0"
                      IsChecked="{Binding SearchConditionRule.SearchCondition.ExcludeSourceApplicationName}"
                      />
            <TextBlock Text="コピー元アプリ名" Grid.Row="3" Grid.Column="1" Margin="10,10,10,0"/>
            <TextBox Text="{Binding SearchConditionRule.SearchCondition.SourceApplicationName}" Grid.Row="3" Grid.Column="2" Margin="10,10,10,0"/>

            <CheckBox Content="除外" Grid.Row="4" Grid.Column="0" Margin="10,10,10,0"
                      IsChecked="{Binding SearchConditionRule.SearchCondition.ExcludeSourceApplicationTitle}"
                      />
            <TextBlock Text="コピー元タイトル" Grid.Row="4" Grid.Column="1" Margin="10,10,10,0"/>
            <TextBox Text="{Binding SearchConditionRule.SearchCondition.SourceApplicationTitle}" Grid.Row="4" Grid.Column="2" Margin="10,10,10,0"/>

            <CheckBox Content="有効" Grid.Row="5" Grid.Column="0" Margin="10,10,10,0"
                     IsChecked="{Binding SearchConditionRule.SearchCondition.EnableStartTime}"                       
                     />
            <TextBlock Text="開始日" Grid.Row="5" Grid.Column="1" Margin="10,10,10,0"/>
            <DatePicker Grid.Row="5" Grid.Column="2" SelectedDate="{Binding SearchConditionRule.SearchCondition.StartTime}" Margin="10,10,10,0"/>

            <CheckBox Content="有効" Grid.Row="6" Grid.Column="0" Margin="10,10,10,0"
                      IsChecked="{Binding SearchConditionRule.SearchCondition.EnableEndTime}"                       
                      />
            <TextBlock Text="終了日" Grid.Row="6" Grid.Column="1" Margin="10,10,10,0"/>
            <DatePicker Grid.Row="6" Grid.Column="2" SelectedDate="{Binding SearchConditionRule.SearchCondition.EndTime}" Margin="10,10,10,0"/>
        </Grid>
        <DockPanel Grid.Row="4" HorizontalAlignment="Stretch" Visibility="{Binding SearchFolderVisibility}">
            <TextBlock Text="対象フォルダ" Margin="10,10,10,00"
                       />
            <!-- 適用対象を選択するツリービューを表示するボタン-->
            <Button Content="選択" 
                        Command="{Binding OpenSelectTargetFolderWindowCommand}"
                        Margin="10,10,10,0"
                        />
            <TextBox Text="{Binding TargetFolderPath}"  Margin="10,10,10,0"
                         IsEnabled="False"
                         />
        </DockPanel>
        <DockPanel Grid.Row="5" HorizontalAlignment="Stretch">
            <!-- 適用対象配下も対象にするかどうか-->
            <CheckBox Content="適用対象配下のフォルダも対象にする" 
                        Margin="10,10,10,0"
                          IsChecked="{Binding SearchConditionRule.IsIncludeSubFolder}"
                        />
        </DockPanel>
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" >
                <Button DockPanel.Dock="Left" Content="クリア" Command="{Binding ClearCommand}" Margin="10,0,10,0" Width="100"/>
            </DockPanel>
            <DockPanel Grid.Column="1" HorizontalAlignment="Right"  Margin="10,0,10,0">
                <Button Content="OK" 
                        Command="{Binding ApplyCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"                    
                        Margin="10,10,0,10" Width="100" />
                <Button DockPanel.Dock="Right" Content="キャンセル" 
                        Command="{Binding CancelCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"                    
                        Margin="10,10,0,10"  Width="100"/>
            </DockPanel>
        </Grid>
    </Grid>
    
</Window>
