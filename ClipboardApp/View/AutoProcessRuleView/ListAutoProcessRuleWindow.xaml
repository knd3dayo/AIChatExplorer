<Window
    x:Class="ClipboardApp.View.AutoProcessRuleView.ListAutoProcessRuleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:WpfAppCommon.Control;assembly=WpfAppCommon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ClipboardApp"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:ClipboardApp.ViewModel"
    Title="{Binding StringResources.ListAutoProcessRuleWindowTitle}"
    Width="850"
    Height="680"
    MinHeight="580"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatLightBgButton}" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <view:ListAutoProcessRuleWindowViewModel />
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Activated">
            <i:InvokeCommandAction Command="{Binding ActivatedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.InputBindings>
        <KeyBinding
            Key="Escape"
            Command="{Binding CloseCommand, Mode=OneTime}"
            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <!--  メニューバー  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,0"
            Orientation="Vertical">
            <materialDesign:ColorZone
                materialDesign:ElevationAssist.Elevation="Dp4"
                DockPanel.Dock="Top"
                Mode="PrimaryMid">
                <Menu
                    Name="menu1"
                    Margin="0,0,0,0"
                    materialDesign:MenuAssist.TopLevelMenuItemHeight="18"
                    IsMainMenu="False">
                    <MenuItem
                        Background="{DynamicResource MaterialDesign.Brush.Primary}"
                        Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                        Header="" />
                </Menu>

            </materialDesign:ColorZone>
        </StackPanel>
        <TabControl
            Grid.Row="1"
            Margin="10,0,10,0"
            HorizontalContentAlignment="Left"
            SelectedIndex="{Binding TabIndex}">
            <TabItem
                Width="Auto"
                Height="Auto"
                Margin="10,3,10,0"
                Padding="0"
                FontSize="10"
                Header="{Binding StringResources.FolderUnit}">
                <!--  ルール一覧のListBox  -->
                <ListView
                    MinHeight="300"
                    ItemsSource="{Binding AutoProcessRules}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedAutoProcessRule}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="100" Header="{Binding StringResources.Enable}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsEnabled}" IsEnabled="False" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Width="350"
                                DisplayMemberBinding="{Binding RuleName}"
                                Header="{Binding StringResources.RuleName}" />
                            <GridViewColumn
                                Width="200"
                                DisplayMemberBinding="{Binding TargetFolder.FolderPath}"
                                Header="{Binding StringResources.TargetFolderFullPath}" />
                        </GridView>
                    </ListView.View>
                    <!--  コンテキストメニュー  -->
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Command="{Binding ChangePriorityCommand}"
                                CommandParameter="up"
                                Header="{Binding StringResources.Up}" />
                            <MenuItem
                                Command="{Binding ChangePriorityCommand}"
                                CommandParameter="down"
                                Header="{Binding StringResources.Down}" />
                            <MenuItem Command="{Binding EditAutoProcessRuleCommand}" Header="{Binding StringResources.Edit}" />
                            <MenuItem Command="{Binding DeleteAutoProcessRuleCommand}" Header="{Binding StringResources.Delete}" />
                        </ContextMenu>
                    </ListView.ContextMenu>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding EditAutoProcessRuleCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListView>
            </TabItem>
            <TabItem
                Width="Auto"
                Height="Auto"
                Margin="10,3,10,0"
                Padding="0"
                FontSize="10"
                Header="システム共通">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <!--  自動処理  -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <!--  MonitorTargetAppNames  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                VerticalAlignment="Center"
                                Text="{Binding StringResources.SourceApp}" />

                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="{Binding StringResources.SourceAppExample}"
                                Text="{Binding SettingUserControlViewModel.MonitorTargetAppNames}" />
                            <CheckBox
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Content="{Binding StringResources.IgnoreTextLessOrEqualToSpecifiedLines}"
                                IsChecked="{Binding IgnoreLineCountChecked}" />

                            <DockPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left">
                                <TextBox
                                    Width="50"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding IgnoreLineCountText}" />
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding StringResources.LineOrLess}" />
                            </DockPanel>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutoTitleGeneration}" />
                            <RadioButton
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.DoNot}"
                                GroupName="AutoDescription"
                                IsChecked="{Binding SettingUserControlViewModel.AutoDescriptionNone, Mode=OneWay}" />
                            <RadioButton
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.AutoTitleGeneration}"
                                GroupName="AutoDescription"
                                IsChecked="{Binding SettingUserControlViewModel.AutoDescription}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />
                            <RadioButton
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.AutomaticallyGenerateTitleUsingOpenAI}"
                                GroupName="AutoDescription"
                                IsChecked="{Binding SettingUserControlViewModel.AutoDescriptionWithOpenAI}" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyGenerateTags}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />
                            <CheckBox
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.AutomaticallyGenerateTagsFromClipboardContent}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoTag}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyMerge}" />
                            <CheckBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.AutomaticallyMergeItemsIfSourceAppAndTitleAreTheSame}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoMergeItemsBySourceApplicationTitle}" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyEmbedding}" />
                            <CheckBox
                                Grid.Row="7"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.AutomaticallyEmbeddingWhenSavingClipboardItems}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoEmbedding}" />
                            <TextBlock
                                Grid.Row="8"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyExtractTextFromFile}" />
                            <CheckBox
                                Grid.Row="8"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.AutomaticallyExtractTextFromFileIfClipboardItemIsFile}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoFileExtract}" />
                            <!--  AutoExtractImageWithPyOCR  -->
                            <TextBlock
                                Grid.Row="9"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyExtractTextFromImage}" />
                            <RadioButton
                                Grid.Row="9"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.DoNot}"
                                GroupName="AutoExtractImage"
                                IsChecked="{Binding SettingUserControlViewModel.AutoExtractImageNone, Mode=OneWay}" />
                            <RadioButton
                                Grid.Row="10"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.ExtractTextUsingPyOCR}"
                                GroupName="AutoExtractImage"
                                IsChecked="{Binding SettingUserControlViewModel.AutoExtractImageWithPyOCR}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />
                            <RadioButton
                                Grid.Row="11"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.ExtractTextUsingOpenAI}"
                                GroupName="AutoExtractImage"
                                IsChecked="{Binding SettingUserControlViewModel.AutoExtractImageWithOpenAI}" />
                            <TextBlock
                                Grid.Row="12"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyAddBackgroundInformation}" />
                            <CheckBox
                                Grid.Row="12"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.GenerateBackgroundInformationFromItemsInTheSameFolder}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoBackgroundInfo}" />
                            <TextBlock
                                Grid.Row="13"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.IncludeBackgroundInformationInEmbedding}" />
                            <CheckBox
                                Grid.Row="13"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.IncludeBackgroundInformationInEmbeddingTargetText}"
                                IsChecked="{Binding SettingUserControlViewModel.IncludeBackgroundInfoInEmbedding}" />

                            <TextBlock
                                Grid.Row="14"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.AutomaticallyGenerateSummary}" />
                            <CheckBox
                                Grid.Row="14"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.GenerateSummaryTextFromContent}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoSummary}" />
                        </Grid>
                        <!--  その他の設定  -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <!--  クリップボードアイテムをOS上のフォルダと同期させる。  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.SynchronizeClipboardItemsWithFoldersOnTheOS}" />
                            <CheckBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.SynchronizeClipboardItemsWithFoldersOnTheOSDescription}"
                                IsChecked="{Binding SettingUserControlViewModel.SyncClipboardItemAndOSFolder}" />
                            <!--  同期先のフォルダ名  -->
                            <DockPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                HorizontalAlignment="Left">
                                <Label
                                    Margin="10,0,10,0"
                                    VerticalAlignment="Center"
                                    Content="{Binding StringResources.SyncTargetFolderName}"
                                    Visibility="{Binding SettingUserControlViewModel.SyncClipboardItemAndOSFolderVisibility}" />
                                <TextBox
                                    Margin="10,0,10,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="{Binding StringResources.SpecifyTheFolderNameOnTheOSToSynchronizeTheClipboardItems}"
                                    Text="{Binding SettingUserControlViewModel.SyncFolderName}"
                                    Visibility="{Binding SettingUserControlViewModel.SyncClipboardItemAndOSFolderVisibility}" />
                            </DockPanel>
                            <!--  同期先のフォルダがGitリポジトリの場合、ファイル更新時に自動的にコミットする。  -->
                            <CheckBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.IfTheSyncTargetFolderIsAGitRepositoryItWillAutomaticallyCommitWhenTheFileIsUpdated}"
                                IsChecked="{Binding SettingUserControlViewModel.AutoCommit}"
                                Visibility="{Binding SettingUserControlViewModel.SyncClipboardItemAndOSFolderVisibility}" />
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <!--  Extract Entity/Data Masking  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="10,10,10,0"
                                Text="{Binding StringResources.EntityExtractionDataMasking}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />
                            <CheckBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.ExtractEntitiesAndMaskDataUsingSpacyFromClipboardContent}"
                                IsChecked="{Binding SettingUserControlViewModel.UseSpacy}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />

                            <CheckBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="10,10,10,0"
                                Content="{Binding StringResources.MaskPersonalInformationInDataSentToOpenAI}"
                                IsChecked="{Binding SettingUserControlViewModel.UserMaskedDataInOpenAI}"
                                Visibility="{Binding SettingUserControlViewModel.EnableDevFeaturesVisibility}" />
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="2" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel
                Grid.Column="0"
                Margin="10,0,0,10"
                HorizontalAlignment="Left"
                Visibility="{Binding AutoProcessRuleButtonVisibility}">
                <Button
                    Width="150"
                    Margin="10,0,0,0"
                    Command="{Binding AddAutoProcessRuleCommand}"
                    Content="{Binding StringResources.NewAutoProcessRule}" />
                <Button
                    Width="150"
                    Margin="10,0,0,0"
                    Command="{Binding EditAutoProcessRuleCommand}"
                    Content="{Binding StringResources.EditAutoProcessRule}" />
            </DockPanel>
            <DockPanel
                Grid.Column="1"
                Margin="10,0,0,10"
                HorizontalAlignment="Right">
                <Button
                    Width="150"
                    Margin="10,0,0,0"
                    Command="{Binding SaveSystemCommonSettingCommand}"
                    Content="{Binding StringResources.SaveSystemCommonSettings}"
                    Visibility="{Binding SaveSystemCommonSettingButtonVisibility}" />
                <Button
                    Width="100"
                    Margin="10,0,20,0"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{Binding StringResources.Close}"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </Grid>
        <cc:MyStatusBar Grid.Row="3" VerticalAlignment="Bottom" />
    </Grid>
</Window>
