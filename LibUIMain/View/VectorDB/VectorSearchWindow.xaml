<Window
    x:Class="LibUIMain.View.VectorDB.VectorSearchWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:LibUIMain.View.Common"
    xmlns:commonModel="clr-namespace:LibUIMain.Resource"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editorControl="clr-namespace:LibUIMain.Control.Editor"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:LibUIMain.ViewModel.VectorDB"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:LibUIMain.View.VectorDB"
    Title="{x:Static res:ViewStringResources.VectorSearchResult}"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:VectorSearchWindowViewModel}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatLightBgButton}" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="25" />
        </Style>
        <commonModel:CommonStringResources x:Key="StringResources" />
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, Mode=OneTime}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Activated">
            <i:InvokeCommandAction Command="{Binding ActivatedCommand, Mode=OneTime}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding ClosedCommand, Mode=OneTime}" />
        </i:EventTrigger>

    </i:Interaction.Triggers>
    <Window.InputBindings>
        <KeyBinding
            Key="Escape"
            Command="{Binding CloseCommand, Mode=OneTime}"
            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  メニューバー  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,0"
            Orientation="Vertical">
            <materialDesign:ColorZone
                materialDesign:ElevationAssist.Elevation="Dp4"
                DockPanel.Dock="Top"
                Mode="PrimaryMid">
                <Menu
                    Name="menu1"
                    Margin="0,0,0,0"
                    materialDesign:MenuAssist.TopLevelMenuItemHeight="18"
                    IsMainMenu="False">
                    <MenuItem
                        Background="{DynamicResource MaterialDesign.Brush.Primary}"
                        Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"
                        Header="" />
                </Menu>
            </materialDesign:ColorZone>
        </StackPanel>
        <TabControl
            Grid.Row="1"
            Margin="10,10,0,10"
            HorizontalContentAlignment="Left"
            SelectedIndex="{Binding SelectedTabIndex, TargetNullValue=-1}">
            <TabItem
                Width="Auto"
                Height="Auto"
                Margin="10,10,10,10"
                HorizontalAlignment="Left"
                Header="{x:Static res:ViewStringResources.MultiVectorRetrieverFinalSearchResult}"
                Visibility="{Binding MultiVectorRetrieverVisibility}">
                <DataGrid
                    Margin="10,10,10,10"
                    AutoGenerateColumns="False"
                    BorderThickness="1"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    CanUserResizeRows="False"
                    CanUserSortColumns="True"
                    ItemsSource="{Binding MultiVectorSearchResults}"
                    VerticalScrollBarVisibility="Auto"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    VirtualizingStackPanel.IsVirtualizing="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding DocId}"
                            Header="DocId" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding FolderPath}"
                            Header="FolderPath" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding SourceId}"
                            Header="SourceId" />
                        <DataGridTextColumn
                            Width="250"
                            Binding="{Binding SourcePath}"
                            Header="SourcePath" />
                        <DataGridTemplateColumn Width="*" Header="Content">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <editorControl:MyTextBox
                                        Height="200"
                                        ScrollViewer.CanContentScroll="True"
                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Text="{Binding Content}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem
                Width="Auto"
                Height="Auto"
                Margin="10,10,0,10"
                HorizontalAlignment="Left"
                Header="{x:Static res:ViewStringResources.VectorSearchResult}">
                <DataGrid
                    Margin="10,10,10,10"
                    AutoGenerateColumns="False"
                    BorderThickness="1"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    CanUserResizeRows="False"
                    CanUserSortColumns="True"
                    ItemsSource="{Binding VectorSearchResults}"
                    VerticalScrollBarVisibility="Auto"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    VirtualizingStackPanel.IsVirtualizing="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Score}"
                            Header="Score" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding DocId}"
                            Header="DocId" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding FolderPath}"
                            Header="FolderPath" />
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding SourceId}"
                            Header="SourceId" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding SourcePath}"
                            Header="SourcePath" />
                        <DataGridTemplateColumn Width="*" Header="Content">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <editorControl:MyTextBox
                                        Height="200"
                                        ScrollViewer.CanContentScroll="True"
                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Text="{Binding Content}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem
                Margin="10,0,0,0"
                Padding="0"
                FontSize="10"
                Header="{x:Static res:ViewStringResources.RequestParameterJson}">
                <ScrollViewer VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
                    <TextBox VerticalAlignment="Top" Text="{Binding PreviewJson, Mode=OneWay}" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Separator Grid.Row="2" />
        <ScrollViewer
            Grid.Row="3"
            Height="100"
            Margin="0,0,0,0"
            VerticalScrollBarVisibility="Auto">
            <editorControl:MyTextBox
                MinHeight="50"
                Margin="10,0,10,0"
                materialDesign:HintAssist.Hint="{x:Static res:ViewStringResources.EnterYourQuestionHere}"
                AcceptsReturn="True"
                Text="{Binding VectorSearchItem.InputText, UpdateSourceTrigger=PropertyChanged}"
                TextWrappingMode="{Binding CommonViewModelProperties.TextWrappingMode}" />
        </ScrollViewer>
        <DockPanel Grid.Row="4" Margin="10,10,10,10">
            <DockPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <Button
                    Width="200"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Left"
                    Command="{Binding SelectVectorDBItemCommand, Mode=OneTime}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{x:Static res:ViewStringResources.SelectVectorDB}"
                    DockPanel.Dock="Left" />
                <TextBlock
                    Margin="100,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Static res:ViewStringResources.VectorDBSearchResultMax}" />
                <TextBox
                    Width="100"
                    Margin="10,0,0,0"
                    Text="{Binding VectorSearchItem.TopK, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="100,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{x:Static res:ViewStringResources.VectorDBSearchScoreThreashold}" />
                <TextBox
                    Width="100"
                    Margin="10,0,0,0"
                    Text="{Binding VectorSearchItem.ScoreThreshold}" />

            </DockPanel>
            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button
                    Width="100"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding SendCommand, Mode=OneTime}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{x:Static res:ViewStringResources.Send}" />
                <Button
                    Width="100"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding ClearCommand, Mode=OneTime}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{x:Static res:ViewStringResources.Clear}" />
                <Button
                    Width="100"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseCommand, Mode=OneTime}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                    Content="{x:Static res:ViewStringResources.Close}"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </DockPanel>
        <cc:MyStatusBar Grid.Row="5" VerticalAlignment="Bottom" />
        <ProgressBar
            Grid.Row="1"
            IsIndeterminate="{Binding CommonViewModelProperties.IsIndeterminate}"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Value="0" />
    </Grid>
</Window>
