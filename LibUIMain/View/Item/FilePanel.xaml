<UserControl
    x:Class="LibUIMain.View.Item.FilePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonModel="clr-namespace:LibUIMain.Resource"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editorControl="clr-namespace:LibUIMain.Control.Editor"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:LibUIMain.View.Item"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:LibUIMain.View.Item"
    xmlns:viewModel="clr-namespace:LibUIMain.ViewModel.Item"
    d:DataContext="{d:DesignInstance Type=viewModel:ContentItemViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatLightBgButton}" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="25" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer
            Grid.Column="1"
            Margin="10,10,10,10"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,3,10,3"
                    VerticalAlignment="Center"
                    Text="{x:Static res:ViewStringResources.FilePath}" />
                <editorControl:MyTextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,3,10,3"
                    IsReadOnly="True"
                    Text="{Binding ContentItem.SourcePath, Mode=OneWay}"
                    TextWrappingMode="{Binding CommonViewModelProperties.TextWrappingMode}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,3,10,3"
                    VerticalAlignment="Center"
                    Text="{x:Static res:ViewStringResources.Folder}" />

                <editorControl:MyTextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,3,10,3"
                    IsReadOnly="True"
                    Text="{Binding ContentItem.FolderName, Mode=OneWay}"
                    TextWrappingMode="{Binding CommonViewModelProperties.TextWrappingMode}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10,3,10,3"
                    VerticalAlignment="Center"
                    Text="{x:Static res:ViewStringResources.FileName}" />
                <editorControl:MyTextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10,3,10,3"
                    IsReadOnly="True"
                    Text="{Binding ContentItem.FileName, Mode=OneWay}"
                    TextWrappingMode="{Binding CommonViewModelProperties.TextWrappingMode}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10,3,10,3"
                    VerticalAlignment="Center"
                    Text="{x:Static res:ViewStringResources.FolderNameAndFileName}" />
                <editorControl:MyTextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10,3,10,3"
                    IsReadOnly="True"
                    Text="{Binding ContentItem.FolderAndFileName, Mode=OneWay}"
                    TextWrappingMode="{Binding CommonViewModelProperties.TextWrappingMode}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,3,10,3"
                    VerticalAlignment="Top"
                    Text="{x:Static res:ViewStringResources.Image}"
                    Visibility="{Binding ImageVisibility}" />
                <Image
                    Grid.Row="4"
                    Grid.Column="1"
                    MaxWidth="600"
                    Margin="10,3,10,3"
                    Source="{Binding ContentItem.BitmapImage, Mode=OneWay}"
                    Stretch="Uniform"
                    Visibility="{Binding ImageVisibility}">
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{Binding CopyImageCommand}" Header="{x:Static res:ViewStringResources.Copy}" />
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
