<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:LibUIMain.Utils"
    xmlns:mdxaml="clr-namespace:Neo.Markdig.Xaml;assembly=Neo.Markdig.Xaml">

    <Style BasedOn="{StaticResource MaterialDesignFlatLightBgButton}" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Height" Value="25" />
    </Style>

    <!--  Document styles  -->
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.DocumentStyleKey}" TargetType="{x:Type FlowDocument}">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextAlignment" Value="Left" />
    </Style>
    <Style TargetType="{x:Type List}">
        <Setter Property="Margin" Value="40,0,0,0" />
        <Setter Property="Padding" Value="0,0,0,0" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.CodeBlockStyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="Background" Value="#ffd3d3d3" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Consolas, Lucida Sans Typewriter, Courier New" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.CodeStyleKey}" TargetType="{x:Type Span}">
        <Setter Property="Background" Value="#ffd3d3d3" />
        <Setter Property="FontFamily" Value="Consolas, Lucida Sans Typewriter, Courier New" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.HyperlinkStyleKey}" TargetType="{x:Type Hyperlink}">
        <Setter Property="Command" Value="{x:Static mdxaml:MarkdownXaml.Hyperlink}" />
        <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}, Path=NavigateUri}" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.Heading1StyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#ff000000" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.Heading2StyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#ff000000" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.Heading3StyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#ff000000" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.Heading4StyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#ff000000" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.Heading5StyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#ff000000" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.Heading6StyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#ff000000" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.ImageStyleKey}" TargetType="{x:Type Image}">
        <Setter Property="MaxHeight" Value="{Binding RelativeSource={RelativeSource Self}, Path=Source.(BitmapSource.PixelHeight)}" />
        <Setter Property="MaxWidth" Value="{Binding RelativeSource={RelativeSource Self}, Path=Source.(BitmapSource.PixelWidth)}" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.QuoteBlockStyleKey}" TargetType="{x:Type Section}">
        <Setter Property="BorderBrush" Value="LightGray" />
        <Setter Property="BorderThickness" Value="4,0,0,0" />
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="Padding" Value="16,0,0,0" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.TableStyleKey}" TargetType="{x:Type Table}">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <Setter Property="CellSpacing" Value="0" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.TableCellStyleKey}" TargetType="{x:Type TableCell}">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1,1,0,0" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.TableHeaderStyleKey}" TargetType="{x:Type TableRow}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.TaskListStyleKey}" TargetType="{x:Type CheckBox}">
        <Setter Property="Margin" Value="0,0,0,-2" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.ThematicBreakStyleKey}" TargetType="{x:Type Paragraph}">
        <Setter Property="BorderBrush" Value="DarkGray" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="LineHeight" Value="1" />
        <Setter Property="Margin" Value="3cm,0" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.SubscriptStyleKey}" TargetType="{x:Type Span}">
        <Setter Property="Typography.Variants" Value="Subscript" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.SuperscriptStyleKey}" TargetType="{x:Type Span}">
        <Setter Property="Typography.Variants" Value="Superscript" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.StrikeThroughStyleKey}" TargetType="{x:Type Span}">
        <Setter Property="TextBlock.TextDecorations" Value="Strikethrough" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.InsertedStyleKey}" TargetType="{x:Type Span}">
        <Setter Property="TextBlock.TextDecorations" Value="Underline" />
    </Style>
    <Style x:Key="{x:Static mdxaml:MarkdownXaml.MarkedStyleKey}" TargetType="{x:Type Span}">
        <Setter Property="Background" Value="Yellow" />
    </Style>
</ResourceDictionary>