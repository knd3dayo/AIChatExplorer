<Window x:Class="ClipboardApp.View.ClipboardItemFolderView.FolderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardApp"
        xmlns:view="clr-namespace:ClipboardApp.View.ClipboardItemFolderView"
        mc:Ignorable="d"
        Title="{Binding WindowName}" Width="350" Height="200">
    <Window.DataContext>
        <view:FolderEditWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10,10,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="名前" Grid.Row="0" Grid.Column="0"  Margin="10,10,10,10" Width="120"/>
            <TextBox Text="{Binding CollectionName}" Grid.Row="0" Grid.Column="1" Margin="10,10,10,10" 
                     IsEnabled="{Binding IsCollectionNameEditable}"
                     />
            <TextBlock Text="表示名" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10" Width="120"/>
            <TextBox Text="{Binding DisplayName}" Grid.Row="1" Grid.Column="1"  Margin="10,10,10,10"/>
        </Grid>
        <Grid Grid.Row="1" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" HorizontalAlignment="Left">
                <Button Content="自動処理ルール" 
               Margin="10,10,0,0"
               Command="{Binding OpenListAutoProcessRuleWindowCommand}" 
                   Width="100"
                  Visibility="{Binding AutoProcessRuleVisibility}"
                   />
                <Button Content="検索条件を設定" 
              Margin="10,10,0,0"
              Command="{Binding OpenEditSearchConditionWindowCommand}" 
                  Width="100"
                  Visibility="{Binding SearchConditionVisibility}"
                  />
            </DockPanel>
            <DockPanel Grid.Column="1" HorizontalAlignment="Right">
                <Button Content="OK" 
                        Margin="10,10,0,0"
                        Command="{Binding CreateCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"                    
                        Width="50"
                    />
                <Button Content="Cancel"
                        Margin="10,10,10,0"
                        Command="{Binding CancelCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"                    
                        DockPanel.Dock="Right"
                        Width="50"
                    />
            </DockPanel>
        </Grid>
    </Grid>
</Window>
