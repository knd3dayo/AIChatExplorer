<Window x:Class="WpfApp1.View.SearchView.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:view="clr-namespace:WpfApp1.View.SearchView"
        mc:Ignorable="d"
        Title="検索" Height="480" Width="400">
    <Window.DataContext>
        <view:SearchWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="検索条件名" Grid.Column="0" Margin="20,20,20,0" />
            <TextBox   Text="{Binding SearchCondition.Name}" Grid.Column="1" Margin="20,20,20,0"
                       IsEnabled="False"
                       />
        </Grid>
        <DockPanel Grid.Row="1" HorizontalAlignment="Stretch" IsEnabled="{Binding IsTargetFolderEnabled}">
            <TextBox Text="適用対象" Margin="20,10,20,10"
                       />
            <!-- 適用対象を選択するツリービューを表示するボタン-->
            <Button Content="選択" 
                        Command="{Binding OpenSelectTargetFolderWindowCommand}"
                        Margin="20,10,20,10"
                        />
            <TextBox Text="{Binding SearchCondition.SearchFolderAbsoluteCollectionName}"  Margin="20,10,20,10"
                         IsEnabled="False"
                         />
        </DockPanel>
        <DockPanel Grid.Row="2" HorizontalAlignment="Stretch" IsEnabled="{Binding IsTargetFolderEnabled}">
            <TextBox Text="適用対象" Margin="20,10,20,10"
                       />
            <!-- 適用対象配下も対象にするかどうか-->
            <CheckBox Content="適用対象配下のフォルダも対象にする" 
                        Margin="20,10,20,10"
                          IsChecked="{Binding IsIncludeSubFolder}"
                        />
        </DockPanel>
        <Grid  Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <CheckBox Content="除外" Grid.Row="0" Grid.Column="0" Margin="20,20,20,0"
                      IsChecked="{Binding SearchCondition.ExcludeDescription}"
                      />
            <TextBlock Text="説明" Grid.Row="0" Grid.Column="1" Margin="20,20,20,0"/>
            <TextBox Text="{Binding SearchCondition.Description}" Grid.Row="0" Grid.Column="2" Margin="20,20,20,0"/>

            <CheckBox Content="除外" Grid.Row="1" Grid.Column="0" Margin="20,20,20,0"
                      IsChecked="{Binding SearchCondition.ExcludeContent}"
                      />
            <TextBlock Text="内容" Grid.Row="1" Grid.Column="1" Margin="20,20,20,0"/>
            <TextBox Text="{Binding SearchCondition.Content}" Grid.Row="1" Grid.Column="2" Margin="20,20,20,0"/>

            <CheckBox Content="除外" Grid.Row="2" Grid.Column="0" Margin="20,20,20,0"
                      IsChecked="{Binding SearchCondition.ExcludeTags}"
                      />
            <TextBlock Text="タグ" Grid.Row="2" Grid.Column="1" Margin="20,20,20,0"/>
            <TextBox Text="{Binding SearchCondition.Tags}" Grid.Row="2" Grid.Column="2" Margin="20,20,20,0"/>

            <CheckBox Content="除外" Grid.Row="3" Grid.Column="0" Margin="20,20,20,0"
                      IsChecked="{Binding SearchCondition.ExcludeSourceApplicationName}"
                      />
            <TextBlock Text="コピー元アプリ名" Grid.Row="3" Grid.Column="1" Margin="20,20,20,0"/>
            <TextBox Text="{Binding SearchCondition.SourceApplicationName}" Grid.Row="3" Grid.Column="2" Margin="20,20,20,0"/>

            <CheckBox Content="除外" Grid.Row="4" Grid.Column="0" Margin="20,20,20,0"
                      IsChecked="{Binding SearchCondition.ExcludeSourceApplicationTitle}"
                      />
            <TextBlock Text="コピー元タイトル" Grid.Row="4" Grid.Column="1" Margin="20,20,20,0"/>
            <TextBox Text="{Binding SearchCondition.SourceApplicationTitle}" Grid.Row="4" Grid.Column="2" Margin="20,20,20,0"/>

            <CheckBox Content="有効" Grid.Row="5" Grid.Column="0" Margin="20,20,20,0"
                     IsChecked="{Binding SearchCondition.EnableStartTime}"                       
                     />
            <TextBlock Text="開始日" Grid.Row="5" Grid.Column="1" Margin="20,20,20,0"/>
            <DatePicker Grid.Row="5" Grid.Column="2" SelectedDate="{Binding SearchCondition.StartTime}" Margin="20,20,20,0"/>

            <CheckBox Content="有効" Grid.Row="6" Grid.Column="0" Margin="20,20,20,0"
                      IsChecked="{Binding SearchCondition.EnableEndTime}"                       
                      />
            <TextBlock Text="終了日" Grid.Row="6" Grid.Column="1" Margin="20,20,20,0"/>
            <DatePicker Grid.Row="6" Grid.Column="2" SelectedDate="{Binding SearchCondition.EndTime}" Margin="20,20,20,0"/>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" >
                <Button DockPanel.Dock="Left" Content="クリア" Command="{Binding ClearCommand}" Margin="20,20,20,20" Width="50"/>
            </DockPanel>
            <DockPanel Grid.Column="1" HorizontalAlignment="Right" Width="150">
                <Button Content="OK" Command="{Binding applyCommand}" Margin="10,20,0,20" Width="50" />
                <Button DockPanel.Dock="Right" Content="キャンセル" Click="Cancel_Click" Margin="10,20,0,20"  Width="50"/>
            </DockPanel>
        </Grid>
    </Grid>
    
</Window>
