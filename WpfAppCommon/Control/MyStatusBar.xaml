<UserControl
    x:Class="WpfAppCommon.Control.MyStatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WpfAppCommon.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:MyStatusBarViewModel />
    </UserControl.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <StatusBar
            Name="statusBar1"
            Background="{DynamicResource MaterialDesign.Brush.Primary}"
            Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
            <StatusBarItem>
                <TextBlock Name="statusBarTextBlock1" Text="{Binding Path=StatusText.Text}" />
            </StatusBarItem>
            <StatusBar.InputBindings>
                <MouseBinding Command="{Binding OpenStatusMessageWindowCommand}" MouseAction="LeftClick" />
            </StatusBar.InputBindings>
        </StatusBar>
    </Grid>
</UserControl>
